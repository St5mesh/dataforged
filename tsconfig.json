{
  "exclude": [
    "src/utils/*.js",
    "node_modules",
    "roll20",
    "**/.vscode/**/*",
    "**/.github/**/*",
    "**/build",
    "analysis",
    "docs"
  ],
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "es6",
      "es2020",
      "es2021",
      "esnext"
    ],
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths",
      },
      {
        "transform": "typescript-is/lib/transform-inline/transformer"
      },
    ],
    "paths": {
      "@dataforged/*": [
        "./src/*",
        "./build/*"
      ],
    },
    "baseUrl": ".",
    "outDir": "build",
    "rootDir": "src",
    "allowJs": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "useDefineForClassFields": false,
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
  },
}