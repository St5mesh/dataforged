{
  "exclude": [
    "src/functions/*.js",
    "node_modules",
    "roll20",
    "**/.vscode/**/*",
    "**/.github/**/*",
    "**/build",
  ],
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es6",
      "es2021",
      "esnext"
    ],
    "plugins": [
      {
        "transform": "typescript-is/lib/transform-inline/transformer"
      }
    ],
    "sourceMap": true,
    "module": "CommonJS",
    "allowJs": true,
    "rootDir": "./src",
    "outDir": "./build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "allowUnreachableCode": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  }
}