{
  "exclude": [
    "src/utils/*.js",
    "node_modules",
    "roll20",
    ".vscode",
    ".github",
    "dist",
    "analysis",
    "docs"
  ],
  "typedocOptions": {
    "entryPoints": [
      "./src/json_out/assets/index.ts",
      "./src/json_out/common/index.ts",
      "./src/json_out/encounters/index.ts",
      "./src/json_out/game_objects/index.ts",
      "./src/json_out/meta/index.ts",
      "./src/json_out/moves/index.ts",
      "./src/json_out/oracles/index.ts",
      "./src/json_out/setting_truths/index.ts"
    ],
    "out": "docs",
    "excludeExternals": true,
    "excludeInternal": true
  },
  "compilerOptions": {
    "module": "ESNext",
    "target": "es6",
    "lib": [
      "es6",
      "es2020",
      "es2021",
      "esnext"
    ],
    "plugins": [
      {
        "transform": "typescript-is/lib/transform-inline/transformer",
        "verbose": true,
      },
      {
        "transform": "typescript-transform-paths"
      },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      },
    ],
    "paths": {
      "@constants/*": [
        "src/constants/*",
        "dist/constants/*"
      ],
      "@json_out/*": [
        "src/json_out/*",
        "dist/json_out/*"
      ],
      "@utils/*": [
        "src/utils/*",
        "dist/utils/*"
      ],
      "@yaml_in/*": [
        "src/yaml_in/*",
        "dist/yaml_in/*"
      ],
      "@classes/*": [
        "src/classes/*",
        "dist/classes/*"
      ],
      "@game_objects/*": [
        "src/game_objects/*",
        "dist/game_objects/*"
      ]
    },
    "baseUrl": ".",
    "preserveConstEnums": true,
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "preserveSymlinks": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "useDefineForClassFields": false,
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
  },
}