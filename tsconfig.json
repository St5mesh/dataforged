{
  "$schema": "http://json.schemastore.org/tsconfig",
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/**/*.d.ts",
    "./src/index-esm.ts"
  ],
  "compilerOptions": {
    "lib": [
      "es2020",
      "es2021",
      "esnext"
    ],
    "strictNullChecks": true,
    "baseUrl": ".",
    "preserveConstEnums": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": false,
    "resolveJsonModule": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": [
      "types",
      "node_modules/@types"
    ]
  }
}