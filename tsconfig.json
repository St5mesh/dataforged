{
  "exclude": [
    "src/utils/*.js",
    "node_modules",
    "roll20",
    ".vscode",
    ".github",
    "dist",
    "analysis",
    "docs"
  ],
  "typedocOptions": {
    "entryPoints": [
      "./src/json_out/assets/index.ts",
      "./src/json_out/common/index.ts",
      "./src/json_out/encounters/index.ts",
      "./src/json_out/game_objects/index.ts",
      "./src/json_out/meta/index.ts",
      "./src/json_out/moves/index.ts",
      "./src/json_out/oracles/index.ts",
      "./src/json_out/setting_truths/index.ts"
    ],
    "out": "docs",
    "excludeExternals": true,
    "excludeInternal": true
  },
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "es6",
      "es2020",
      "es2021",
      "esnext"
    ],
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths",
      },
      {
        "transform": "typescript-is/lib/transform-inline/transformer"
      },
    ],
    "paths": {
      "@dataforged/*": [
        "./src/*",
        "./dist/*"
      ],
    },
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "useDefineForClassFields": false,
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
  },
}